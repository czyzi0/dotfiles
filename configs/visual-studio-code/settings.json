{
    // Privacy
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Editor
    "editor.fontSize": 12,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "all",
    "editor.cursorStyle": "line-thin",
    "editor.detectIndentation": true,
    "editor.minimap.showSlider": "always",
    "editor.rulers": [79, 100],
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            "comments": "#717171"
        }
    },
    // Files
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    // Extensions
    "extensions.ignoreRecommendations": true,
    // Terminal
    "terminal.integrated.fontSize": 10,
    // Workbench
    "workbench.colorTheme": "Monokai",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "foreground": "#ffffff",
            "errorForeground": "#ffffff",
            "descriptionForeground": "#ffffff",
            "focusBorder": "#515151",
            "selection.background": "#060606",
            "textBlockQuote.background": "#060606",
            "widget.shadow": "#060606",
            "input.background": "#242424",
            "inputOption.activeBorder": "#707070",
            "inputValidation.infoBackground": "#546190",
            "inputValidation.infoBorder": "#819aff",
            "inputValidation.warningBackground": "#848528",
            "inputValidation.warningBorder": "#e2e22e",
            "inputValidation.errorBackground": "#90274a",
            "inputValidation.errorBorder": "#f92672",
            "dropdown.background": "#414141",
            "dropdown.listBackground": "#1e1e1e",
            "list.focusBackground": "#414141",
            "list.activeSelectionBackground": "#505050",
            "list.inactiveSelectionBackground": "#313131",
            "list.hoverBackground": "#272727",
            "list.dropBackground": "#414141",
            "list.highlightForeground": "#ffffff",
            "pickerGroup.foreground": "#707070",
            "button.background": "#060606",
            "badge.background": "#707070",
            "badge.foreground": "#ffffff",
            "progressBar.background": "#707070",
            "editor.background": "#060606",
            "editor.foreground": "#ffffff",
            "editorWidget.background": "#1e1e1e",
            "editor.selectionBackground": "#51515180",
            "editor.selectionHighlightBackground": "#51515180",
            "editorHoverWidget.background": "#414141",
            "editorHoverWidget.border": "#707070",
            "diffEditor.insertedTextBackground": "#66852880",
            "diffEditor.removedTextBackground": "#90274a80",
            "editor.lineHighlightBackground": "#323232",
            "editorCursor.foreground": "#ffffff",
            "editorCursor.background": "#202020",
            "editorWhitespace.foreground": "#414141",
            "editorIndentGuide.background": "#414141",
            "editorLineNumber.foreground": "#646464",
            "editorLineNumber.activeForeground": "#ffffff",
            "editorSuggestWidget.background": "#272727",
            "editorSuggestWidget.border": "#707070",
            "editor.wordHighlightBackground": "#4a4a4a80",
            "editor.wordHighlightStrongBackground": "#6a6a6a80",
            "peekViewTitle.background": "#1e1e1e",
            "peekView.border": "#707070",
            "peekViewResult.background": "#1e1e1e",
            "peekViewResult.selectionBackground": "#414141",
            "peekViewEditor.background": "#272727",
            "peekViewResult.matchHighlightBackground": "#707070",
            "peekViewEditor.matchHighlightBackground": "#707070",
            "tab.inactiveBackground": "#242424",
            "tab.border": "#1e1e1e",
            "tab.inactiveForeground": "#cccccc",
            "editorGroupHeader.tabsBackground": "#1e1e1e",
            "editorGroup.border": "#414141",
            "editorGroup.dropBackground": "#41414180",
            "panel.border": "#414141",
            "panel.background": "#000000",
            "panelTitle.activeForeground": "#ffffff",
